
pipeline {
    agent any
    
    parameters {
        choice(name: 'action', choices: ['apply', 'destroy'], description: 'Select the action to perform')
    }
    stages {
        stage('Clonar repositorio Git') {
            steps {
            git url: 'https://github.com/fsanjo268/TFG.git', branch: 'main'
            bat 'dir C:\\ProgramData\\Jenkins\\.jenkins\\workspace\\TFG\\Terraform_1\\Terraform'
            }
        }
         stage('Inicializar Terraform') {
            steps {
                dir("C:\\ProgramData\\Jenkins\\.jenkins\\workspace\\TFG\\Terraform_1\\Terraform"){
                    bat 'D:\\Terraform\\terraform init'
                }
            }
        }
        stage('Planificar Infraestructura') {
            steps {
                dir("C:\\ProgramData\\Jenkins\\.jenkins\\workspace\\TFG\\Terraform_1\\Terraform"){
                    bat 'D:\\Terraform\\terraform plan -out tfplan'                
                }
            }
        }
        
        stage('Apply / Destroy') {
            steps {
                dir("C:\\ProgramData\\Jenkins\\.jenkins\\workspace\\TFG\\Terraform_1\\Terraform"){
                    script {
                        if (params.action == 'apply') {
                            //if (!params.autoApprove) {
                               // def plan = readFile "C:\\ProgramData\\Jenkins\\.jenkins\\workspace\\TFG\\Terraform_1\\Terraform\\tfplan"
                               // input message: "Do you want to apply the plan?",
                                //parameters: [text(name: 'Plan', description: 'Please review the plan', defaultValue: plan)]
                            //}
    
                            bat 'D:\\Terraform\\terraform apply -input=false tfplan'
                        } else if (params.action == 'destroy') {
                            bat 'D:\\Terraform\\terraform destroy --auto-approve'
                        } else {
                            error "Invalid action selected. Please choose either 'apply' or 'destroy'."
                        }
                    }
                }
            }
        }
        stage('AZ') {
            steps {
                bat '"C:\\Program Files\\Microsoft SDKs\\Azure\\CLI2\\wbin\\az" login --tenant 5f2a1fdf-b755-40df-8d23-5c8d19455375'
            }
        }
    }
}
